FROM node:18-alpine

WORKDIR /app

# Copy package.json and package-lock.json
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci --only=production

# Copy the server file
COPY server.js ./
COPY prisma ./prisma/

# Generate Prisma client
RUN npx prisma generate

EXPOSE 3001

CMD ["node", "server.js"]